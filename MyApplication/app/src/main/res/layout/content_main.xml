<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kyo.gasstation.MainActivity"
    android:orientation="vertical"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="center"
        >
        <Button
            android:id="@+id/NearbyGS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 주변\n주유소"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/LocalGS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울시 지역별\n주유소"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        >
        <Button
            android:id="@+id/Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카드사\n혜택"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/InterestGS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심\n주유소"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/GasIF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유가\n정보"
            android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>
